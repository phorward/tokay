Until : @<P, Escape: Void> {
    Peek<P>  accept $0
    (Escape P | Char)  repeat
    reject
}

String: @<Start: Char<'">, End: Void, Escape: '\\'> {
    Start Until<(End | Start), Escape> (End | Start)
}

print("UNTIL   : ", Until<'!'> Char)
print("STRING  : ", String<'"'>)
print("CHAR    : ", Char)
